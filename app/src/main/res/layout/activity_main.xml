<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <!--android:orientation="horizontal">-->

    <!--<EditText android:id="@+id/et_place"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint"
        android:inputType="text"
        android:layout_toLeftOf="@id/btn_show"/>-->
    <Button android:id="@+id/btn_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/find"
        android:layout_above="@+id/map"
        android:layout_toLeftOf="@+id/btn_myloc"
        android:layout_toStartOf="@+id/btn_myloc" />
    <Button android:id="@+id/btn_myloc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Me"
        android:layout_above="@+id/map"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
        <!--android:onClick="sendMessage"/>-->
    <EditText android:id="@+id/et_place"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint"
        android:inputType="text"
        android:layout_toLeftOf="@id/btn_show"/>
    <fragment android:id="@+id/map"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@id/et_place"
        class="com.google.android.gms.maps.SupportMapFragment"/>
</RelativeLayout>